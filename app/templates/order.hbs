<div class="checkout">
  <div class="container">
    <div class="qr-code">
      {{qr-code value=bitcoinAddress}}
    </div>
    <div class="payment">
      <h1>Preordering: &amp;{{model.account.address}} and 10 Ampercoins</h1>
      <h3><i class="fa fa-spinner fa-spin"></i> Waiting for payment</i></h3>
      <h3>Please pay exactly {{model.amountInBTC}} BTC to:</h3>
      <h3>{{model.payment_address}}</h3>

      <h1>{{model.account.public_key}}</h1>
    </div>
  </div>
</div>
